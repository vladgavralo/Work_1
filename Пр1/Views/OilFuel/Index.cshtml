@model OilFuelModel

<h2>Розрахунок мазуту</h2>

<form asp-action="Calculate" asp-controller="OilFuel" method="post">
    <div class="form-group">
        <label>Вуглець (C):</label>
        <input type="text" asp-for="C" class="form-control"/>
    </div>

    <div class="form-group">
        <label>Водень (H):</label>
        <input type="text" asp-for="H" class="form-control" />
    </div>

    <div class="form-group">
        <label>Кисень (O):</label>
        <input type="text" asp-for="O" class="form-control" />
    </div>

    <div class="form-group">
        <label>Сірка (S):</label>
        <input type="text" asp-for="S" class="form-control" />
    </div>

    <div class="form-group">
        <label>Вологість (W):</label>
        <input type="text" asp-for="W" class="form-control" />
    </div>

    <div class="form-group">
        <label>Зольність (A):</label>
        <input type="text" asp-for="A" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ванадій (V):</label>
        <input type="text" asp-for="V" class="form-control" />
    </div>

    <div class="form-group">
        <label>Теплота згоряння горючої маси (Qdaf):</label>
        <input type="text" asp-for="Qdaf" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Розрахувати</button>
</form>